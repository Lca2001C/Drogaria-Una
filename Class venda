import java.sql.Date;

/**
 * Classe Venda representa uma venda na farmácia.
 */
public class Venda {
    private int id;
    private Cliente cliente;
    private Produto produto;
    private int quantidade;
    private Date data;

    /**
     * Construtor para inicializar uma venda.
     * @param id Identificador da venda.
     * @param cliente Cliente que realizou a compra.
     * @param produto Produto vendido.
     * @param quantidade Quantidade vendida.
     * @param data Data da venda.
     */
    public Venda(int id, Cliente cliente, Produto produto, int quantidade, Date data) {
        this.id = id;
        this.cliente = cliente;
        this.produto = produto;
        this.quantidade = quantidade;
        this.data = data;
    }

    // Métodos get e set
    public int getId() { return id; }
    public void setId(int id) { this.id = id; }
    public Cliente getCliente() { return cliente; }
    public void setCliente(Cliente cliente) { this.cliente = cliente; }
    public Produto getProduto() {
		return null;
    }
}
